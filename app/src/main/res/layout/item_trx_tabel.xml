<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"
        android:layout_margin="1dp"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="19-04-2020"
                android:maxLength="6"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/tanggal2"
                android:layout_below="@id/tv_stock"
                android:layout_toRightOf="@id/tv_tanggal">
            </TextView>



            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="89"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/pembelian"
                android:layout_below="@id/tv_standmeter"
                android:layout_toRightOf="@id/tv_pembelian">
            </TextView>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="72"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/penjualan"
                android:layout_below="@id/tv_pembelian"
                android:layout_toRightOf="@id/tv_pembelian">
            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="32"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/stock"
                android:layout_below="@id/tv_penjualan"
                android:layout_toRightOf="@id/tv_stock">
            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="1234"
                android:textSize="15sp"
                android:id="@+id/stand_meter"
                android:textStyle="bold"
                android:layout_toRightOf="@id/tv_standmeter">
            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</LinearLayout>